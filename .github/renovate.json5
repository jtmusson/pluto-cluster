{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended",
    "github>truecharts/public//.github/renovate/main.json5"
  ],
  "automergeSchedule": [
    "* 0-6 * * *"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
        ],
        "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor"
        ],
        "automerge": false,
        "labels": [
          "type/minor"
          ]
    },
    {
      "matchDatasources": [
        "custom.minecraft-bedrock"
        ],
        "extractVersion": "/bedrockdedicatedserver/bin-linux/bedrock-server-(?<version>.+)\\.zip$"
    }
  ],
  "separateMultipleMajor": true,
  "assignees": [
    "jtmusson"
  ],
  "timezone": "Europe/London",
  "customDatasources": {
    "minecraft-bedrock": {
      "defaultRegistryUrlTemplate": "https://www.minecraft.net/en-us/download/server/bedrock.html",
      "format": "html"
    }
  }
}
