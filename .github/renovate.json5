{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended",
    "github>truecharts/public//.github/renovate/main.json5"
  ],
  "automergeSchedule": [
    "after 4am",
    "before 5am"
  ],
  "major": {
    "enabled": true,
    "autoApprove": false,
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "matchVersion": "^\\d{4}\\.\\d{1,2}(\\.\\d{1,2})?$",
      "excludePackagePatterns": ["*"],
      "enabled": false,
      "matchUpdateTypes": ["major"]
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
        ],
        "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor"
        ],
        "automerge": false,
        "labels": [
          "type/minor"
          ]
    },
  ],
  "separateMultipleMajor": true,
  "assignees": [
    "jtmusson"
  ],
  "timezone": "Europe/London"
}