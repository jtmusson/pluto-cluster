{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended",
    "github>truecharts/public//.github/renovate/main.json5"
  ],
  "automergeSchedule": [
    "* 0-6 * * *"
  ],
  "customDatasources": {
    "minecraft-bedrock": {
      "defaultRegistryUrlTemplate": "https://www.minecraft.net/en-us/download/server/bedrock",
      "format": "html"
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [ "helm-release.yaml" ],
      "matchStrings": [
        "datasource=custom.minecraft-bedrock depName=minecraft-bedrock\\n.+VERSION: (?<currentValue>\\S+)"
      ],
      "depNameTemplate": "minecraft-bedrock",
      "dataSourceTemplate": "custom.minecraft-bedrock"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": false,
      "labels": [
        "type/minor"
      ]
    },
    {
      "matchDatasources": [
        "custom.minecraft-bedrock"
      ],
      "extractVersion": "/bedrockdedicatedserver/bin-linux/bedrock-server-(?<version>.+)\\.zip$"
    }
  ],
  "separateMultipleMajor": true,
  "assignees": [
    "jtmusson"
  ],
  "timezone": "Europe/London"
}