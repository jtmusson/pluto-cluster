{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended",
    "github>truecharts/public//.github/renovate/main.json5"
  ],
  "automergeSchedule": [
    "* 0-6 * * *"
  ],
  "customDatasources": {
    "minecraft-bedrock": {
      "defaultRegistryUrlTemplate": "https://web.archive.org/web/9999/https://www.minecraft.net/en-us/download/server/bedrock",
      "format": "html"
    }
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": false,
      "labels": [
        "type/minor"
      ]
    },
    {
      "matchDatasources": [
        "custom.minecraft-bedrock"
      ],
      "extractVersion": "/bedrockdedicatedserver/bin-linux/bedrock-server-(?<version>.+)\\.zip$",
      "versioning": "regex:^(?<major>\\d+)0(?<minor>\\d+)0(?<patch>\\d+)$"
    }
  ],
  "separateMultipleMajor": true,
  "assignees": [
    "jtmusson"
  ],
  "timezone": "Europe/London"
}